<RoomController>:

    button_motor_up: button_motor_up
    button_motor_down: button_motor_down

    BoxLayout:
        orientation: 'vertical'

        ToggleButton:
            text: 'CONTROLLER'
            on_press: root.run() if self.state == 'down' else root.stop()

        ToggleButton:
            id: button_motor_up
            text: 'Motor UP'
            on_press: root.set_motor()

        ToggleButton:
            id: button_motor_down
            text: 'Motor DOWN'
            on_press: root.set_motor()